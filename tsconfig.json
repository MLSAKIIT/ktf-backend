{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "incremental": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@models": ["./models"],
      "@utils": ["./utils/index.ts"],
      "@middleware": ["./middleware/index.ts"],
      "@firebase": ["./firebase/index.ts"],
      "@data": ["./data/index.ts"],
      "@constants": ["./constants/index.ts"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
