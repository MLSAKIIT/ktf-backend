{
  "name": "ktf-backend",
  "version": "0.0.1",
  "main": "dist/server.js",
  "author": "Krishna Kumar",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npx tsc --watch\" \"tsc-alias -w\" \"nodemon -r dotenv/config -q dist/server.js\"",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "build": "npx tsc && tsc-alias",
    "format": "prettier --write \"**/*.{ts,js,md,json}\"",
    "clean": "rimraf dist node_modules"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "firebase-admin": "^10.2.0",
    "mongoose": "^6.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.36",
    "concurrently": "^7.2.1",
    "dotenv": "^16.0.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "tsc-alias": "^1.6.7",
    "typescript": "^4.6.4"
  }
}
